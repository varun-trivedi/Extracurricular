<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/clubrequest_style.css" />
    <script src="/js/bulletin_request.js" defer></script>
  </head>
  <body>
    <div class="content">
      <div class="image-section">
        
      </div>
      <div class="text-section">
        <P><strong>BULLETIN BOARD UPDATION FORM</strong></P>
        <form>
          <div class="inputs-section">
            <div class="inputs">
              <div>
                <div>
                  <label for="first-name">FIRST NAME</label
                  ><input type="text"  name="name" id="name-field" value="{{name}}" readonly><br><br><br>
                </div>
                <div>
                  <label for="last-name">LAST NAME</label
                  ><input type="text"  name="lastName" id="lastName-field" value="{{lastName}}" readonly><br><br><br>
                </div>
              </div>
              <div>
                <div>
                  <label for="email">EMAIL</label
                  ><input type="text"  name="email" id="email-field" value="{{email}}" readonly><br><br><br>
                </div>
                
              </div>
              <div>
                <div>
                  <label for="roll-no">ROLL NUMBER</label
                  ><input type="text"  name="rollNo" id="rollNo-field" value="{{rollNo}}" readonly><br><br><br>
                </div>
              </div>
              <div>
                <div>
                    <p><label for="reason">CONTENT</label></p>
                    <textarea id="content" name="content" rows="4" cols="50" maxlength="90"></textarea>
                <br>
                </div>
              </div>
            </div>
          </div>
          <button type="submit" id="create-account">Submit Application</button>
        </form>
      </div>
    </div>
  </body>
</html>