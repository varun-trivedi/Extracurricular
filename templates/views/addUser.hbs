<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/clubrequest_style.css" />
    <script src="/js/addUser.js" defer></script>
  </head>
  <body>
    <div class="content">
      <div class="image-section">
        
      </div>
      <div class="text-section">
        <P><strong>ADD USER FORM</strong></P>
        <form>
          <div class="inputs-section">
            <div class="inputs">
              <div>
                <div>
                  <label for="first-name">FIRST NAME</label
                  ><input type="text"  name="name" id="name-field" ><br><br><br>
                </div>
                <div>
                  <label for="last-name">LAST NAME</label
                  ><input type="text"  name="lastName" id="lastName-field"><br><br><br>
                </div>
              </div>
              <div>
                <div>
                  <label for="email">EMAIL</label>
                  <input type="text"  name="email" id="email-field" ><br><br><br>
                </div>
                <div>
                  <label for="club-names">ROLE</label>
                   <input type="text" list="roles" name="role" ><br><br><br>
                  <datalist id="roles">
                            <option value="G.Sec of Sports">
                            <option value="G.Sec of Science and Tech">
                            <option value="G.Sec Cultural">
                            <option value="Club Coordinator - Cybros">
                            <option value="Club Coordinator - MediaCell">
                            <option value="Student">
                  </datalist>
                </div>
              </div>
              <div>
                <div>
                  <label for="roll-no">ROLL NUMBER</label>
                  <input type="text"  name="rollNo" id="rollNo-field"><br><br><br>
                </div>
              </div>
              <div>
                <div>
                    <label for="mobileNo">MOBILE NO</label>
                    <input type="text"  name="mobileNo" id="mobileNo-field"><br><br><br>
                </div>
                <div>
                    <label for="password">PASSWORD</label>
                    <input type="password"  name="password" id="password-field"><br><br><br>
                </div>
              </div>
            </div>
          </div>
          <button type="submit" id="create-account">Submit Application</button>
        </form>
      </div>
    </div>
  </body>
</html>
